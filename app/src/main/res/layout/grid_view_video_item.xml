    <ImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/image_item"
        android:visibility="visible"/>

    <VideoView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:id="@+id/video_item"
        android:visibility="invisible"/>
</FrameLayout>