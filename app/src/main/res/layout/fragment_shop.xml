<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slawcio.lab1.Shop"
    android:background="@color/colorPrimaryDark">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:text="0 zÅ‚"
        android:layout_marginEnd="50dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_full_price"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:cropToPadding="true"
        android:src="@drawable/cart"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageButton"
        android:orientation="vertical">


        <Button
            android:id="@+id/slawcio_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Slawcio songs"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/electronic"            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Electronic"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/classic"            android:layout_marginTop="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Classic"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/rock"            android:layout_marginTop="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rock"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</RelativeLayout>
